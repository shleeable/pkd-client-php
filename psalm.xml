<?xml version="1.0"?>
<psalm
    errorLevel="1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <PossiblyUnusedProperty errorLevel="info" />
        <PossiblyUnusedMethod errorLevel="info" />
        <!-- assertSecretKeySet() validates at runtime, docblock declares the post-condition -->
        <RedundantConditionGivenDocblockType>
            <errorLevel type="suppress">
                <file name="src/Features/ProtocolTrait.php" />
            </errorLevel>
        </RedundantConditionGivenDocblockType>
        <!-- VerifyTrait validates row structure with hasRequiredProofFields before use -->
        <MixedAssignment>
            <errorLevel type="suppress">
                <file name="src/Features/VerifyTrait.php" />
            </errorLevel>
        </MixedAssignment>
    </issueHandlers>
</psalm>
